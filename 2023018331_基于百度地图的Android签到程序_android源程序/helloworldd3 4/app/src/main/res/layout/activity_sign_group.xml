<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignGroup"
    android:background="@color/x1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
        android:fontFamily="sans-serif-condensed-light"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="签到标题"
                android:textSize="36sp"
                android:textColor="@color/x2"
                android:id="@+id/title1"/>

                />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <Button
               android:padding="10dp"
               android:background="@drawable/buttom"
android:layout_marginHorizontal="11dp"

               android:textColor="#FFFFFF"
    android:textSize="23.5sp"

    android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="发起签到"

            android:id="@+id/signButton"
            />

           <Button
               android:padding="10dp"
               android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="23.5sp"

    android:elevation="4dp"
               android:layout_marginHorizontal="11dp"

               android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="编辑签到"

            android:id="@+id/Editsign"
            />
               <Button
                   android:padding="10dp"
                   android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="23.5sp"
                   android:layout_marginHorizontal="11dp"

    android:elevation="4dp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="签到统计"

                android:id="@+id/signStatic"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:background="@drawable/listviewb"
                android:id="@+id/qiandaolist"
                android:layout_width="398dp"
                android:layout_height="631dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                                android:padding="8dp" />
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:orientation="vertical">
                    <TextView
        android:fontFamily="sans-serif-condensed-light"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="签到标题:"
                        android:textColor="@color/x2"
                        android:textSize="36sp"
                        android:id="@+id/signtitle"/>
                    <TextView
        android:fontFamily="sans-serif-condensed-light"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="36sp"
                        android:textColor="@color/x2"

                        android:text="起始时间:"
                        android:id="@+id/signStartTime"/>
                    <TextView
                        android:textColor="@color/x2"

                        android:fontFamily="sans-serif-condensed-light"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="36sp"
                        android:text="截止时间:"
                        android:id="@+id/signEndTime"/>
                       <Button
                           android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="48sp"
android:padding="15dp"
    android:elevation="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/signIt"
                        android:text="签到"

                        />
<!--                       <Button-->
<!--                           android:layout_marginTop="50dp"-->
<!--                           android:background="#662021"-->
<!--                 android:textColor="#FFFFFF"-->
<!--    android:textSize="28sp"-->
<!--                           android:padding="10dp"-->

<!--    android:elevation="4dp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="65dp"-->
<!--                        android:id="@+id/history"-->
<!--                        android:text="查看您的历史签到"-->
<!--                        />-->

                </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>