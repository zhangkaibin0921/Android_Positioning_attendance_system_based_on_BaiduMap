<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSign"
    android:background="@color/x1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
        android:fontFamily="sans-serif-condensed-light"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="aaa"
            android:textSize="32.5sp"
            android:id="@+id/signnamee"
            android:textColor="@color/x2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <Button
                   android:layout_margin="2dp"
                   android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="17sp"

    android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="延时签到"
                android:id="@+id/yanshi"
                />

                <Button
                   android:layout_margin="2dp"
                   android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="17sp"

    android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改签到"
                android:id="@+id/xiugai"/>
                <Button
                   android:layout_margin="2dp"
                   android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="17sp"

    android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生请假"
                android:id="@+id/qingjia"/>

                <Button
                   android:layout_margin="2dp"
                   android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="17sp"

    android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束签到"
                android:id="@+id/jieshu"/>
                <Button
                   android:layout_margin="2dp"
                   android:background="@drawable/buttom"
                 android:textColor="#FFFFFF"
    android:textSize="17sp"

    android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:id="@+id/shanchu"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="660dp">

            <ListView

                android:background="@drawable/listviewb"
                android:id="@+id/listviewnames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>