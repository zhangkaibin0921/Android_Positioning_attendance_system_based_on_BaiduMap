<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/x1"
    android:orientation="vertical"

    >


    <TextView
        android:fontFamily="sans-serif-condensed-light"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:text="发起签到页面"
        android:textColor="@color/x2"
        android:textSize="32.5sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
        android:fontFamily="sans-serif-condensed-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="签到名称"
            android:textColor="@color/x6"
            android:textSize="24.5sp"
            />

        <EditText
            
            android:textSize="22.5sp"
            android:textColor="@color/x2"
                android:background="@drawable/edit_text_background"
        android:fontFamily="sans-serif-condensed-light"
        android:textColorHint="#b3b3b3
"
            android:id="@+id/textt"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:hint="       例:第一次签到"
            android:singleLine="true"


            />
    </LinearLayout>

    <ImageView
        android:id="@+id/reg_diver1"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:background="@color/a3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:textColor="@color/x6"
            android:textSize="24.5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="签到限时   "

             />

        <EditText
            android:textSize="22.5sp"
            android:textColor="@color/x2"

        android:fontFamily="sans-serif-condensed-light"
        android:textColorHint="#b3b3b3
"
            android:id="@+id/mins"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:hint="       单位：分钟"
            android:singleLine="true"
            android:background="@drawable/edit_text_background"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/reg_diver2"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:background="@color/input_dvier" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

            <Button
                android:textColor="@color/x1"
                android:textSize="30.5sp"
                android:background="@drawable/buttom"
                android:elevation="4dp"
                    android:id="@+id/signnows"
                    android:layout_width="321dp"
                android:layout_height="48dp"
                android:text="发起签到"
                />
    </LinearLayout>

</LinearLayout>